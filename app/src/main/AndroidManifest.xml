            android:value="ca-app-pub-3940256099942544~3347511713" />

        <activity android:name=".Activities.LivePreview" />
        <activity android:name=".Activities.LiveActivity" />
        <activity
            android:name=".Activities.EditImages"
            android:label="@string/title_activity_edit_images"
            android:theme="@style/NoActionBar" />
        <activity android:name=".Activities.EmptyRequiredData" />
        <activity
            android:name=".Activities.PreferencesDistance"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
