        <activity android:name=".Activities.FullscreenVideo"></activity>
        <activity android:name=".Activities.ForgetPasswordActivity" />
        <activity android:name=".Activities.WithdrawCoins" />
        <activity android:name=".Activities.ChannelActivity" />

