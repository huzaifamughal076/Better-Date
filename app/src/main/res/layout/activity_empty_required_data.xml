<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Activities.EmptyRequiredData">

    <TextView
        android:id="@+id/backtopreferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/arrow_back_24"
        android:text="Press here to go back"
        android:background="#322222"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="10dp"
        />

    <TextView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Waiting for data from owner"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="30sp" />


</RelativeLayout>